rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'admin';
    }

    // --- REGLAS POR COLECCIÓN ---

    // 1. USUARIOS
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (isAdmin() || (isOwner(userId) && request.resource.data.rol == resource.data.rol));
      allow delete: if isAdmin();
    }
    
    // 2. EMISORES
    match /emisores/{emisorId} {
      // LEER: Admin ve todo || Reclutador ve los suyos || Reclutador ve los COMPARTIDOS
      allow read: if isAuthenticated() && (
        isAdmin() || 
        resource.data.reclutador_id == request.auth.uid || 
        resource.data.es_compartido == true
      );
      
      // CREAR: Admin crea || Reclutador crea para sí mismo
      allow create: if isAuthenticated() && (isAdmin() || request.resource.data.reclutador_id == request.auth.uid);
      
      // EDITAR: Admin edita todo || Reclutador edita SOLO los suyos (No puede editar los compartidos de otro)
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (resource.data.reclutador_id == request.auth.uid && request.resource.data.reclutador_id == request.auth.uid)
      );
      
      allow delete: if isAdmin();
    }

    // 3. HISTORIAL
    match /historial/{historialId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // 4. METADATOS DEL SISTEMA
    match /system/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}